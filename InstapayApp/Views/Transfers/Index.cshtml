@model IEnumerable<InstapayApp.Models.Transaction>

@{
    ViewData["Title"] = "Transfers";
}

<h1>Transfers</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>From Customer</th>
            <th>To Customer</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FromCustomer.Name</td>
                <td>@item.ToCustomer.Name</td>
                <td>@item.Amount</td>
                <td>@item.Date</td>
                <td>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New Transfer</a>
